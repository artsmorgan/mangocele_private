<div class="modal fade" id="pedidoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">
                    Solicitud de pedido de {{ data }}
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-contactar">
                    {{ form_start(pedido) }}
                    {{ form_errors(pedido) }}

                    <div class="form-group">
                        {{ form_label(pedido.Nombre) }}
                        {{ form_errors(pedido.Nombre) }}
                        {{ form_widget(pedido.Nombre,{'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(pedido.Email) }}
                        {{ form_errors(pedido.Email) }}
                        {{ form_widget(pedido.Email,{'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(pedido.Telefono) }}
                        {{ form_errors(pedido.Telefono) }}
                        {{ form_widget(pedido.Telefono,{'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(pedido.Cantidad) }}
                        {{ form_errors(pedido.Cantidad) }}
                        {{ form_widget(pedido.Cantidad,{'attr': {'class': 'form-control-custom'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(pedido.Notas) }}
                        {{ form_errors(pedido.Notas) }}
                        {{ form_widget(pedido.Notas,{'attr': {'class': 'form-control', 'rows': 5} }) }}
                    </div>


                    <div class="form-group">
                       {{ form_widget(pedido.Enviar,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(pedido) }}
                </div>
            </div>

        </div>
    </div>
</div>