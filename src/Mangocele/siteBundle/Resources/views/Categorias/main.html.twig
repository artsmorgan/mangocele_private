{% extends '::base.html.twig' %}
{% block title %} Mangocele.cr {% endblock %}
{% block stylesheets %}{% endblock %}
{% block jsfiles %}
    <script type="text/javascript" src="{{ asset('js/modernizr.custom.js') }}" ></script>
{% endblock %}
{% block body %}
    <div class="content-wrapper" id="listado-productos">
        <div class="header-banner"><img src="http://placehold.it/1100x110"></div>
        <h1>
            Productos por Categoria: <strong> {{ categoria }} </strong>
        <span class="empresas-order">
            Mostrar:
            <select name="tipo" id="tipo">
                <option>Productos</option>
                <option value="/categorias/{{ categoria }}/emp">Empresas</option>
            </select>
        </span>
            <span class="empresas-order">
            Ordenar:
            <select name="ordenar">
                <option>Mayor valoraci√≥n</option>
                <option>Nombre A...Z</option>
                <option>Nombre Z...A</option>
            </select>
        </span>
        </h1>

        <div class="empresas-listado">
            <ul class="products-list">
                {% for a in 0..8 %}
                    <li>
                        <div class="first-el">
                            <a href="/producto/pulseras">
                                <div class="imagenes-p"><div class="imagenes-p"><img src="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('images/pulseras.png') }}"></div></div>
                                <div class="product-info">
                                    <div class="pull-left product-description">Collares</div>
                                    <div class="pull-right">C 5,000</div>
                                </div>
                            </a>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>

    </div>

    <script>
        document.getElementById("tipo").onchange = function() {
            if (this.selectedIndex!==0) {
                window.location.href = this.value;
            }
        };
    </script>
{% endblock %}
